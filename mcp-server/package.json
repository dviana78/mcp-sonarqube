{
  "name": "sonarqube-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for SonarQube integration - TypeScript/Node.js analysis and reporting",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t sonarqube-mcp-server .",
    "docker:run": "docker run -p 8080:8080 --network sonarqube_sonarqube-network sonarqube-mcp-server"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sonarqube",
    "typescript",
    "nodejs",
    "code-analysis",
    "quality-gates",
    "static-analysis"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sonarqube-mcp-server"
  }
}